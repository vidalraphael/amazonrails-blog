<div class="row">
  <div class="col s12 offset-m3 m6">
    <div class="card">
      <div class="card-content">
        <span class="card-title grey-text"> Entrar </span>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :nick, required: true, autofocus: true %>
            <%= f.input :email, required: true, autofocus: true %>
            <%= f.input :password, required: true, placeholder: ("#{@minimum_password_length} caracteres no mÃ­nimo" if @minimum_password_length) %>
            <%= f.input :password_confirmation, required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, 'Cadastrar' %>
          </div>
        <% end %>
      </div>
      <div class="card-action">
        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
</div>
