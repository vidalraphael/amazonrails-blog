<div class="card z-depth-2">
  <% if post.featured_media %>
    <div class="card-image">
      <%= image_tag post.featured_media.file_url %>
    </div>
  <% end %>
  <div class="card-content">
    <span class="card-title grey-text"><%= post.title %></span>
    <small class='muted'>Postado em <%= l post.created_at, format: :mediumDate %></small>
    <br/>
    <p><%= post.excerpt %></p>
    <p><%= link_to "Continuar lendo", storytime.post_path(post) %></p>
  </div>
  <% unless post.tags.empty? %>
    <div class="card-action">
      <%= render 'storytime/posts/tags', post: post %>
    </div>
  <% end %>
</div>
